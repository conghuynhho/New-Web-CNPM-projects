<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/assets/layout.css")
    @Styles.Render("~/Content/assets/header-fixed.css")
    @Scripts.Render("~/bundles/modernizr")
    @*<script src="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"></script>*@

</head>

<body>

    <header class="header-fixed">

        <div class="header-limiter">

            <h1><a href="~/Home">Quản lí Giải <span>Bóng Đá </span> Quốc Gia</a></h1>

            <nav>
                <ul>
                    <li>@Html.ActionLink("Trang Chủ", "Index", "Home")</li>
                    <li class="my-dropdown">
                        @Html.ActionLink("Mùa Giải", "Index", "MuaGiai") <!-- this is <a> tag-->
                        <div class="dropdown-content">
                            <a href="~/BangXepHang/Index">Bảng Xếp Hạng</a>

                        </div>
                    </li>
                    <li class="my-dropdown">
                        @Html.ActionLink("Đội Bóng", "Index", "DoiBong")
                        <div class="dropdown-content">
                            <a href="~/San">Sân</a>
                            @Html.ActionLink("Hồ sơ Đội bóng", "MyIndex","DoiBong")
                        </div>
                    </li>
                    <li class="my-dropdown">
                        @Html.ActionLink("Cầu Thủ", "Index", "CauThu")
                        <div class="dropdown-content">
                            <a href="~/LoaiCauThu">Loại Cầu Thủ</a>
                            <a href="~/CauThu/DanhSachCauThu">Tra Cứu Cầu Thủ</a>
                        </div>
                    </li>
                    <li class="my-dropdown">
                        @Html.ActionLink("Trận đấu", "Index", "TranDau")
                        <div class="dropdown-content">
                            <a href="~/LichThiDau">Lịch Thi Đấu</a>
                            @Html.ActionLink("Trọng tài", "Index", "TrongTai")
                        </div>
                    </li>
                    <li class="my-dropdown">
                        @Html.ActionLink("Kết Quả", "Index", "KQTD")
                        <div class="dropdown-content">
                            <a href="~/CauThu_GhiBan">Cầu Thủ Ghi Bàn</a>
                        </div>
                    </li>
                    <li class="my-dropdown">
                        @Html.ActionLink("Quy Định", "Index", "ThamSo")
                        <div class="dropdown-content">
                            <a href="~/BanThang">Loại Bàn Thắng</a>
                        </div>
                    </li>
                    @*<li>@Html.ActionLink("Liên Hệ", "", "")</li>*@
                    <li>@Html.ActionLink("Giới Thiệu", "About", "Home")</li>

                </ul>

            </nav>

        </div>

    </header>

    <!-- You need this element to prevent the content of the page from jumping up -->
    <div class="header-fixed-placeholder"></div>

    <!-- The content of your page would go here. -->

    <div class="main-content">
        @RenderBody()




        <br />
        <br />
        <br />
        <div class="footer">
            <p>&copy; @DateTime.Now.Year - Đồ án Công nghệ phần mềm SE104.K21</p>
        </div>
    </div>





    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    
    <script type="text/javascript">

        $ (function () {

            var showHeaderAt = 150;

            var win = $(window),
                body = $('body');

            // Show the fixed header only on larger screen devices

            if (win.width() > 600) {

                // When we scroll more than 150px down, we set the
                // "fixed" class on the body element.

                win.on('scroll', function (e) {

                    if (win.scrollTop() > showHeaderAt) {
                        body.addClass('fixed');
                    }
                    else {
                        body.removeClass('fixed');
                    }
                });

            }

        });

    </script>


    <!-- Demo ads. Please ignore and remove. -->
    <!-- <script src="http://cdn.tutorialzine.com/misc/enhance/v3.js" async></script> -->



    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required:false)

</body>

</html>